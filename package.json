{
  "name": "mnc-api",
  "version": "1.0.0",
  "description": "MNC API service",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "NODE_ENV=production node dist/index.js",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "seed": "ts-node src/scripts/seed.ts"
  },
  "keywords": [
    "api",
    "express",
    "typescript",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "mongoose": "^8.15.2",
    "winston": "^3.17.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@stylistic/eslint-plugin": "^4.4.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "eslint": "^9.29.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vitest": "^3.2.4"
  }
}
